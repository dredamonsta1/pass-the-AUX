// frontend/tsconfig.node.json
{
    "compilerOptions": {
        "composite": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        // Removed "noEmit": true, as it conflicts with "composite": true
        "types": [
            "node"
        ] // This specifies Node.js types
    },
    "include": [
        "vite.config.ts"
    ] // Or other Node.js specific files like setupTests.ts if applicable
}